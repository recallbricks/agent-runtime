# RecallBricks Agent Runtime - Environment Variables

# Required Configuration
RECALLBRICKS_AGENT_ID=your_agent_id
RECALLBRICKS_USER_ID=your_user_id
RECALLBRICKS_API_KEY=your_recallbricks_api_key

# Agent Identity (Optional - defaults provided if not set)
RECALLBRICKS_AGENT_NAME=My Agent
RECALLBRICKS_AGENT_PURPOSE=A helpful assistant with persistent memory

# Optional Configuration
RECALLBRICKS_API_URL=https://recallbricks-api-clean.onrender.com
RECALLBRICKS_LLM_PROVIDER=anthropic
RECALLBRICKS_LLM_MODEL=claude-sonnet-4-5-20250929
RECALLBRICKS_TIER=builder

# Behavior Settings
RECALLBRICKS_AUTO_SAVE=true
RECALLBRICKS_VALIDATE_IDENTITY=true
RECALLBRICKS_CACHE_ENABLED=true
RECALLBRICKS_CACHE_TTL=300000
RECALLBRICKS_MAX_CONTEXT_TOKENS=4000

# Debug
RECALLBRICKS_DEBUG=false

# ============================================================
# Test Configuration (for running tests)
# ============================================================

# Run tests with real API calls (default: false for mocked tests)
TEST_USE_REAL_API=false

# Skip expensive load/stress tests (default: true)
TEST_SKIP_EXPENSIVE=true

# Only run critical path tests (default: false)
TEST_CRITICAL_PATH_ONLY=false

# For real API tests, use a cheap model
# RECALLBRICKS_LLM_MODEL=claude-haiku-4-5-20250115

# ============================================================
# LLM-Specific Settings (Optional)
RECALLBRICKS_LLM_TEMPERATURE=0.7
RECALLBRICKS_LLM_MAX_TOKENS=2048
RECALLBRICKS_LLM_BASE_URL=

# API Server (for REST adapter)
PORT=3000
