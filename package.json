{
  "name": "@recallbricks/runtime",
  "version": "0.2.0",
  "description": "Universal cognitive runtime for AI systems - persistent identity, continuous memory, and self-improving intelligence",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --testPathIgnorePatterns=critical-path",
    "test:watch": "jest --watch --testPathIgnorePatterns=critical-path",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=critical-path",
    "test:unit": "jest tests/unit --testPathIgnorePatterns=critical-path",
    "test:integration": "jest tests/integration --testPathIgnorePatterns=critical-path",
    "test:critical": "TEST_USE_REAL_API=true jest tests/integration/critical-path.test.ts --runInBand",
    "test:all": "TEST_USE_REAL_API=true jest --runInBand",
    "test:ci": "jest --ci --testPathIgnorePatterns=critical-path",
    "test:load": "node tests/load/runner.js",
    "test:load:enterprise": "node tests/load/enterprise-load-test.js",
    "test:stress": "node tests/stress/stress-test.js",
    "test:chaos": "node tests/chaos/chaos-test.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "cognitive",
    "llm",
    "runtime",
    "recallbricks",
    "anthropic",
    "openai",
    "gemini",
    "ollama",
    "persistent-identity",
    "reflection",
    "metacognition"
  ],
  "author": "RecallBricks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/recallbricks/agent-runtime.git"
  },
  "bugs": {
    "url": "https://github.com/recallbricks/agent-runtime/issues"
  },
  "homepage": "https://recallbricks.com",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "lru-cache": "^11.0.2",
    "openai": "^4.72.0",
    "p-retry": "^6.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "autocannon": "^7.15.0",
    "clinic": "^13.0.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prom-client": "^15.1.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
